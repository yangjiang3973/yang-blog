<!DOCTYPE html>
<html lang="en">
    <%- include("components/_head.ejs")%>

    <body>
        <div class="headband"></div>
        <div class="container">
            <%- include("components/_sidebar.ejs"); %>
            <div class="content">
                <% articles.forEach((i) => { %>
                <div class="content__block">
                    <div class="content__brief">
                        <%- include("components/_postHeader.ejs", {article: i})
                        %>
                        <div class="content__brief--body">
                            <%- i.text %>
                        </div>
                    </div>
                    <div class="content__link">
                        <a href="/posts/<%= i._id %>" rel="content">
                            Read >>
                        </a>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
        <%- include("components/_footer.ejs")%>
    </body>
</html>
