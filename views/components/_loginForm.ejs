<form id="login-form" class="form__login">
    <div class="form__group">
        <input
            class="form__input"
            id="login-email"
            type="email"
            placeholder="请输入邮箱"
            required
            autocomplete="username"
        />
        <div class="form__status" id="login-status-email">
            <svg class="form__icon">
                <use xlink:href="/images/sprite.svg#icon-warning"></use>
            </svg>
            <span>
                请输入有效邮箱
            </span>
        </div>
    </div>
    <div class="form__group">
        <input
            class="form__input"
            id="login-password"
            type="password"
            placeholder="请输入密码"
            required
            minlength="8"
            maxlength="20"
            autocomplete="current-password"
        />
        <span class="form__status"></span>
    </div>
    <button id="login-submit" class="form__submit">登陆</button>
    <span class="form__third-party">
        <span>第三方登陆：</span>
        <a
            class="form__third-party--github"
            href="https://github.com/login/oauth/authorize?client_id=8aed57234e8e37b96dd1"
        >
            <svg class="form__icon">
                <use xlink:href="/images/sprite.svg#icon-github"></use>
            </svg>
            <span>github</span>
        </a>
    </span>
</form>
